<% @new_size = @size + @new_sections.size  %>

<% if @last_section %>
  <%= turbo_stream.replace dom_id(@last_section), partial: "survey_sections/survey_section", locals: { survey: @survey, section: @last_section, index: @size, size: @new_size} %>
<% end %>

<% @new_sections.each do |section| %>
  <% @size += 1 %>
  <%= turbo_stream.append "sections", partial: "survey_sections/survey_section", locals: { survey: @survey, section: section, index: @size, size: @new_size  } %>
<% end%>
