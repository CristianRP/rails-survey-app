<%= turbo_frame_tag 'modal' %>
<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block w-full" id="notice"><%= notice %></p>
<% end %>
<section id="evaluations_all">
  <div class="py-10 flex flex-col w-full">
    <h2 class="py-5 text-3xl text-evaluationStrong font-bold text-center">Evaluations</h2>
    <p class="text-sm text-center text-evaluationStrong font-semibold">
      Lorem ipsum, dolor sit amet consectetur adipisicing elit. Voluptatem sit dolorum, <br>
      delectus praesentium voluptas quis assumenda? Recusandae ex illo nulla natus <br>
      accusantium dolorum aut? Aspernatur sapiente soluta unde ea aperiam?
    </p>
    <div class="flex justify-center py-5">
      <%= link_to new_evaluation_path, id: 'create_evaluation_welcome', data: { turbo_frame: 'modal' } do %>
        <div class="p-3 bg-evaluationStrong text-white text-sm font-semibold rounded-lg">
          Create Evaluation
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <% evaluations.each do |evaluation| %>
      <%= render 'evaluation', evaluation: evaluation %>
    <% end %>
  </div>
</section>
