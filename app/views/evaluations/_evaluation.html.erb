<div id="<%= dom_id evaluation %>" class="border-2 w-9/12 mx-auto flex h-40 rounded-lg shadow-lg p-2 my-5">
  <div class="w-40">
    <%= image_tag "upload", class: "object-fit h-full/2 w-full/2 pt-2 pb-10" %>
  </div>
  <div class="w-full p-3">
    <p>
      Name:
      <strong class="font-semibold">
        <%= evaluation.name %>
      </strong>
    </p>
    <p>
      Description:
      <strong class="font-semibold">
        <%= evaluation.description %>
      </strong>
    </p>
    <p>
      Kind:
      <strong class="font-semibold">
        <%= evaluation.kind %>
      </strong>
    </p>
    <p>
      User:
      <strong class="font-semibold">
        <%= evaluation.user.email %>
      </strong>
    </p>


    <div class="flex justify-end">
      <%= button_to evaluation_path(evaluation), method: :get do %>
        <div class="rounded-lg bg-evaluationStrong px-5 py-2 text-white text-sm font-semibold">
          See more
        </div>
      <% end %>
    </div>
  </div>

  <%
=begin%>
 <% if action_name != "show" %>
    <%= link_to "Show this evaluation", evaluation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this evaluation", edit_evaluation_path(evaluation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
<%
=end%>
</div>
