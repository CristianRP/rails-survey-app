<div class="mb-14 flex justify-between">
  <%= link_to audits_index_path(step: step - 1), class: "text-white font-semibold bg-removeIcon py-2 px-5 text-sm rounded-lg", style: "visibility: #{@step == 0 ? "hidden" : "unset"}" do %>
    Back
  <% end %>

  <% unless @total == @step %>
    <%= link_to audits_index_path(step: step + 1), class: "text-white font-semibold bg-evaluationStrong py-2 px-5 text-sm rounded-lg self-end" do %>
      Next
    <% end %>
  <% else %>
    <%= link_to audits_finish_path(id: survey.id, token: token), class: "text-white font-semibold bg-evaluationStrong py-2 px-5 text-sm rounded-lg self-end" do %>
      Finish Survey
    <% end %>
  <% end %>
</div>

<div class="mb-16 w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
  <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= progress_state %>%"></div>
</div>
