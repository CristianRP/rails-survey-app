<section class="bg-main-color p-10">
  <div class="bg-white px-32 pb-32 pt-16 rounded-lg flex flex-col justify-center">
    <%= render "header", step: step, progress_state: progress_state, survey: survey, token: token %>

    <div class="flex flex-col justify-center">
      <h2 class="text-main-color font-bold text-5xl mt-1 mb-0 text-center"><%= chapter.name %></h2>
      <p class="flex justify-center mt-1 mb-5">
        <span class="text-main-color font-bold text-2xl"><%= chapter.description %></span>
      </p>
      <div class="text-main-color text-center my-10">
        <%= chapter.body %>
      </div>
    </div>
  </div>
</section>
