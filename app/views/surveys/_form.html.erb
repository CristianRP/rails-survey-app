<%= form_with( model: survey ) do |form| %>

  <%= render "shared/errors", resource: survey %>

  <div class="flex items-center gap-5 my-2">
    <%= form.label :name, class: "text-white font-bold w-1/3" %>
    <%= form.text_field :name, class: "p-2 rounded-lg text-sm font-semibold w-full" %>
  </div>

  <div class="flex items-center gap-5 my-2">
    <%= form.label :description, class: "text-white font-bold w-1/3" %>
    <%= form.text_field :description, class: "p-2 rounded-lg text-sm font-semibold w-full" %>
  </div>

  <div class="flex items-center gap-5 my-2">
    <%= form.label :avatar, class: "text-white font-bold w-1/3" %>
    <%= form.file_field :avatar, class: "text-sm rounded-lg font-semibold w-full" %>
  </div>

  <div class="flex py-2 justify-end gap-5">
    <%= form.submit class: "bg-surveyStrong p-2 rounded-lg text-white font-semibold cursor-pointer" %>
    <%= link_to "Cancel", :back, class: "bg-removeIcon p-2 rounded-lg text-white font-semibold" %>
  </div>
<% end %>
