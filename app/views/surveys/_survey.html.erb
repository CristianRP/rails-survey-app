<div id="<%= dom_id model %>" class="border-2 w-9/12 mx-auto flex h-40 rounded-lg shadow-lg p-2 my-5">
  <div class="w-40">
    <% if model.avatar.attached? %>
      <%= image_tag model.avatar, class: "object-fit w-full" %>
    <% else %>
    <%= image_tag 'upload', class: "object-fit w-full" %>
    <% end %>
  </div>

  <div class="w-full p-3">
    <p>
      Name:
      <strong class="font-semibold">
        <%= model.name %>
      </strong>
    </p>
    <p>
      Body:
      <strong class="font-semibold">
        <%= model.name %>
      </strong>
    </p>
    <p>
      User:
      <strong class="font-semibold">
        <%= model.user.email %>
      </strong>
    </p>

    <div class="flex justify-end">
      <%= link_to send("#{model.class.name.underscore}_path", model) do %>
        <div class="text-white text-sm bg-surveyStrong font-semibold rounded-lg py-2 px-5">
          See more
        </div>
      <% end %>
    </div>
  </div>
</div>
